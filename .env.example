# Supabase Configuration
# Get these values from your Supabase project settings: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service Role Key (for server-side operations - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Site URL (auto-detected on Vercel)
NEXT_PUBLIC_SITE_URL=https://chainofevents.xyz/

# OpenAI API Key (for scripts/event_processor.py and /admin/event-helper)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Admin Secret (for /admin/event-helper page)
# Generate a random string, e.g.: openssl rand -base64 32
ADMIN_SECRET=your-admin-secret-here

# Farcaster Bot Configuration
# Neynar API Key - Get from: https://dev.neynar.com/
NEYNAR_API_KEY=your-neynar-api-key

# Farcaster Signer UUID - Create a signer in Neynar dashboard
FARCASTER_SIGNER_UUID=your-signer-uuid

# Your Farcaster username (without @)
FARCASTER_USERNAME=chainofevents

# Optional: Secret for Vercel Cron authentication
CRON_SECRET=your-random-secret-string

# Optional: Secret for manual post triggering (testing only)
FARCASTER_MANUAL_SECRET=your-manual-trigger-secret

# Twitter Bot Configuration
# Get these from: https://developer.twitter.com/en/portal/dashboard
# Note: Requires a Twitter Developer account with API access

# Twitter API Keys (Consumer Keys)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Twitter Access Tokens (for your bot account)
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Your Twitter username (without @)
TWITTER_USERNAME=chainofevents

# Optional: Secret for manual Twitter post triggering (testing only)
TWITTER_MANUAL_SECRET=your-twitter-manual-trigger-secret
